<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="15dp"
    android:background="@drawable/border_round_gray3_20dp">

    <LinearLayout
        android:id="@+id/total_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vp_movie_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/test_image"
            android:scaleType="fitCenter"
            android:transitionName="movie_poster"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:padding="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목 : "
                android:fontFamily="@font/electrical_safety_regular"
                android:gravity="center"
                android:textColor="@color/gray4" />

            <TextView
                android:id="@+id/vp_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제목"
                android:fontFamily="@font/electrical_safety_regular"
                android:textColor="@color/gray6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:padding="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개봉 연도 : "
                android:fontFamily="@font/electrical_safety_regular"
                android:gravity="center"
                android:textColor="@color/gray4"/>

            <TextView
                android:id="@+id/vp_movie_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="개봉 연도"
                android:fontFamily="@font/electrical_safety_regular"
                android:textColor="@color/gray6"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>